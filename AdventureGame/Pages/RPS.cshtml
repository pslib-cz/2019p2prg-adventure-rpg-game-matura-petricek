@page
@model AdventureGame.RPSModel
@{
    ViewData["Title"] = "RPS";
}

<h1>RPS</h1>
<div class="text-center">
    <h1 class="display-4">Welcome to your personal casino!</h1>
    <p style="margin-bottom: 40px">You fancy some gambling? Well, this is the right place for you.</p>
    <p>Your choice: @Model.Player</p>
    <p>Opponents choice: @Model.Computer</p>
</div>
<form method="post">
    <div class="form-check">
        <input class="form-check-input" type="radio" asp-for="@Model.Player" value="@Choice.Rock">
        <label class="form-check-label" asp-for="@Model.Player">
            Rock
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" asp-for="@Model.Player" value="@Choice.Scissors">
        <label class="form-check-label" asp-for="@Model.Player">
            Scissors
        </label>
    </div>
    <div class="form-check disabled">
        <input class="form-check-input" type="radio" asp-for="@Model.Player" value="@Choice.Paper">
        <label class="form-check-label" asp-for="@Model.Player">
            Paper
        </label>
    </div>
    <p>@Model.Message</p>
    @if (Model.State.Money < 2)
    {
        <p>You don't have enough money to play</p>
        <a class="btn btn-secondary" asp-page="Place" asp-route-id="Home">Go home</a>
    }
    else
    {
        <button type="submit" class="btn btn-primary">Play</button>
        <a class="btn btn-secondary" asp-page="Place" asp-route-id="Home">Go home</a>
    }

</form>
<div class="avatar" style="padding-left:70%">
    <img style="width: 75%;" class="img" src="~/img/avatar.png" alt="avatar">
</div>
<div style="padding-left:72%">
    <a style="color:red">HP: @Model.State.HP</a>
    <a style="color:deepskyblue">Level: @Model.State.Level</a>
    <a style="color:gold">Gold: @Model.State.Money</a>
    <a style="color:gray">Equipment: @Model.State.Equipment</a>
</div>
