@page
@model AdventureGame.RPSModel
@{
    ViewData["Title"] = "RPS";
}

<h1>RPS</h1>
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>@Model.Player</p>
    <p>@Model.Computer</p>
    <p>Rounds: @Model.Round</p>
    <p>Player Wins: @Model.Wins</p>
</div>
<form method="post">
    <input type="hidden" asp-for="@Model.Round" value="@Model.Round" />
    <input type="hidden" asp-for="@Model.Wins" value="@Model.Wins" />
    <div class="form-check">
        <input class="form-check-input" type="radio" asp-for="@Model.Player" value="@Choice.Rock">
        <label class="form-check-label" asp-for="@Model.Player">
            Rock
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" asp-for="@Model.Player" value="@Choice.Scissors">
        <label class="form-check-label" asp-for="@Model.Player">
            Paper
        </label>
    </div>
    <div class="form-check disabled">
        <input class="form-check-input" type="radio" asp-for="@Model.Player" value="@Choice.Paper">
        <label class="form-check-label" asp-for="@Model.Player">
            Scissors
        </label>
    </div>
    <button type="submit" class="btn btn-primary">Play</button>
</form>

